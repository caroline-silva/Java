package poo2808;

import java.util.Scanner; //Importando a Classe Scanner

public class EntradaDados {
	
	public static void main(String[] args) {
		Scanner meuScanner = new Scanner(System.in); //Criar um objeto Scanner
		System.out.println("Entre com o seu nome");
		String nome= meuScanner.nextLine(); //Le os dados digitados
		System.out.println("Seu nome eh:" + nome); //Imprime nome
		
		System.out.println("\nEntre com a nota 01:"); 
		float nota1 = meuScanner.nextFloat(); //Le numero com virgula (,)
		System.out.println("Entre com a nota 02:");
		float nota2 = meuScanner.nextFloat();
		System.out.println("Media: " +((nota1 + nota2) / 2)); //Calcula a media 
	}

}
